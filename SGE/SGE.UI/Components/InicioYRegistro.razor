}

@if(bloqueRegistro)
{
    <div class="dialogo-contenedor">
        <div class="dialogo-contenido">
            <h3>Registrese con sus datos personales</h3>
            <input placeholder="Nombre" @bind="_usuario.Nombre" class="form-control">
