@if(bloqueInicio)
{
    <div class="dialogo-contenedor">
        <div class="dialogo-contenido">
            <h3>Ingrese sus credenciales</h3>
            <input placeholder="Correo electr칩nico" @bind="_usuario.CorreoElectronico" class="form-control">
            <input placeholder="Contrase침a" @bind="_usuario.Contrasena" class="form-control">
        </div>
