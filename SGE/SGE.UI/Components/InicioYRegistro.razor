    </div>
}

@code {

    private bool bloqueInicio = false;
    private bool bloqueRegistro = false;
    [Parameter]
    public EventCallback Seguir{get;set;}
    Usuario _usuario = new Usuario();

    public void IniciarSesion()
    {
        bloqueInicio = true;
        Seguir.InvokeAsync();
    }
    public void Registrarse()
    {
        bloqueRegistro = true;
        Seguir.InvokeAsync();
    }

}